    Layout = "~/Views/Shared/_Layout.cshtml";

}

@model AngularJS_CS.Controllers.QuestionController
<link rel="stylesheet/less" href="~/Content/less/questionnaire.less" />
<h2>Nouveau Questionnaire</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <form>
            <hr />
            <div class="form-group">
                <div class="col-ld-10">
                    <h5>Destinataires</h5>
                    @Html.DropDownListFor(model=>model.Question.Message.Individu1, ViewBag.ListIndividus as SelectList, htmlAttributes:new {type ="destlist" })
                    @Html.TextBoxFor(model => model.Question.Message.Individu.userLogin, htmlAttributes: new { type = "destinataire", placeholder = "Destinataire(s)" })
                    <h5>Sujet du questionnaire</h5>
                    @Html.TextBoxFor(model => model.Question.Message.sujet, htmlAttributes: new { type = "sujet", placeholder = "sujet" })
                </div>
                @Html.TextAreaFor(model => model.Question.Message.contenu, htmlAttributes: new { type = "detail", placeholder = "Details" })
            @Html.ListBoxFor(model=>model.Question.Option_Questionnaire, ViewBag.ListRep as MultiSelectList, htmlAttributes:new {type = "reponses" })
            </div>

            <div class="form-group">
                <div class="col-ld-offset-2 col-md-10">
                    <input type="submit" value="Envoyer" class="btn btn-block" />
                </div>
            </div>
        </form>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "../")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
